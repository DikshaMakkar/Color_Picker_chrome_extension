{
    "name": "Color picker",
    "description": "A color picker extension",
    "version": "1.0",
    "manifest_version": 3,
    "author": "Diksha Makkar",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "options_page": "options.html",
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "/images/picker_16.png",
        "32": "/images/picker_16.png",
        "48": "/images/picker_16.png"
    }
}
